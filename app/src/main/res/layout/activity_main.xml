<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_default"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/registerForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:padding="8dp"
                android:textColor="@color/white"
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:background="@android:color/transparent"
                app:icon="@drawable/ic_back"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Welcome!"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                style="@style/SecondaryButton"
                android:padding="8dp"
                android:textColor="@color/black"
                android:id="@+id/btnCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Categories"
                android:layout_marginBottom="16dp" />

            <Button
                style="@style/SecondaryButton"
                android:padding="8dp"
                android:textColor="@color/black"
                android:id="@+id/btnAddExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Expense"
                android:layout_marginBottom="16dp" />

            <Button
                style="@style/SecondaryButton"
                android:padding="8dp"
                android:textColor="@color/black"
                android:id="@+id/btnViewExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Expenses"
                android:layout_marginBottom="16dp" />

            <Button
                style="@style/SecondaryButton"
                android:padding="8dp"
                android:textColor="@color/black"
                android:id="@+id/btnSetBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Budget"
                android:layout_marginBottom="16dp" />

            <!-- New button for viewing budgets -->
            <Button
                style="@style/SecondaryButton"
                android:padding="8dp"
                android:textColor="@color/black"
                android:id="@+id/btnViewBudgets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Budgets"
                android:layout_marginBottom="16dp" />

            <Button
                style="@style/SecondaryButton"
                android:padding="8dp"
                android:textColor="@color/black"
                android:id="@+id/btnViewSpendingByCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" View Spending By Category"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>